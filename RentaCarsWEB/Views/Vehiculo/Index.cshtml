@model IEnumerable<RentaCars.EN.Vehiculo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Placa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Npuertas)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.PrecioDiario)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.PagoTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Placa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Npuertas)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.PrecioDiario)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.PagoTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoID)
        </td>
        <td>
            <img src="@item.imagen" /> 
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VehiculoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VehiculoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VehiculoID })
        </td>
    </tr>
}

</table>
